                    "gateway": "192.168.10.1",
                    "dhcpRange": "192.168.10.100-192.168.10.199"
                },
                "wifi": {
                    "radio": "wifi1",
                    "main": true,
                    "ssid": "MainHomeWiFi",
                    "password": "MainWiFiPassword",
                    "encryption": "wpa2-psk,wpa3-psk"
                }
            },
            "guest": {
                "id": 20,
                "title": "Guest VLAN",
                "ip": {
                    "address": "192.168.20.1/24",
                    "subnet": "192.168.20.0/24",
                    "gateway": "192.168.20.1",
                    "dhcpRange": "192.168.20.100-192.168.20.199"
                },
                "wifi": {
                    "radio": "wifi1",
                    "main": false,
                    "ssid": "GuestHomeWiFi",
                    "password": "GuestWiFiPassword",
                    "encryption": "wpa2-psk"
                }
            },
            "iot": {
                "id": 30,
                "title": "SmartHome/IoT VLAN",
                "ip": {
                    "address": "192.168.30.1/24",
