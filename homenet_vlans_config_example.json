{
    "bridgeName": "bridge-main",
    "timeZoneName": "Europe/Bratislava",
    "dnsServers": "8.8.8.8,8.8.4.4",
    "countryCode": "Slovakia",

    "wan" : {
        "port": "ether1",
        "pppoe": {
            "name": "pppoe-uplink",
            "username": "pppoe_username",
            "password": "pppoe_password",
            "serviceName": "PPPOE_SERVICE_NAME"
        }
    },

