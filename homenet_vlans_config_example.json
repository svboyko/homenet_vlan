                }
            },
            "tv": {
                "id": 40,
                "title": "TV VLAN",
                "ip": {
                    "address": "192.168.40.1/24",
                    "subnet": "192.168.40.0/24",
                    "gateway": "192.168.40.1",
                    "dhcpRange": "192.168.40.100-192.168.40.199"
                }
            }
        },
        "ports": {
            "ether2": {
                "comment": "Trunk to VLAN switch",
                "trunk": [ "main", "guest", "iot" ]
            },
            "ether3": {
                "comment": "Computer 1",
                "vlan": "main"
            },
            "ether4": {
                "comment": "Computer 2",
                "vlan": "main"
            },
            "ether5": {
                "comment": "Computer 3",
                "vlan": "main"
            },
            "ether6": {
                "comment": "NAS",
                "trunk": [ "main", "tv" ]
            },
            "ether7": {
                "comment": "TV",
                "vlan": "tv"
            },
            "ether8": {
                "comment": "Smart Home Controller",
                "vlan": "iot"
            }
        }
